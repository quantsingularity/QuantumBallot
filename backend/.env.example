# Example environment variables for QuantumBallot backend

# Server Configuration
PORT=3000
NODE_ENV=development

# JWT Secret
JWT_SECRET=your_jwt_secret_here_min_32_chars_long
ACCESS_TOKEN_SECRET=your_access_token_secret_here_min_32_chars

# Email Configuration (Nodemailer)
MAILER_SERVICE=gmail
MAILER_HOST=smtp.gmail.com
MAILER_PORT=587
MAILER_USER=your_email@example.com
MAILER_PASS=your_email_password

# LevelDB Path
DB_PATH=./data/QuantumBallot_db

# Encryption Keys for Blockchain (32 bytes hex = 64 characters)
# Generate these with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SECRET_KEY_IDENTIFIER=0123456789abcdef0123456789abcdef0123456789abcdef0123456789abcdef
SECRET_IV_IDENTIFIER=0123456789abcdef0123456789abcdef

# Encryption Keys for Votes (32 bytes hex = 64 characters)
SECRET_KEY_VOTES=fedcba9876543210fedcba9876543210fedcba9876543210fedcba9876543210
SECRET_IV_VOTES=fedcba9876543210fedcba9876543210

# Other Secrets/Keys
# Add any other required environment variables here
